@model List<YouTubeApiProject.Models.YouTubeVideoModel>

<h2 style="text-align: center; color: #333;">Search YouTube Videos</h2>

<!-- Search Form -->
<form asp-action="Search" method="post" style="text-align: center; margin-bottom: 30px;">
    <input type="text" name="query" placeholder="Search for videos..."
           style="padding: 10px; width: 500px; border: 1px solid #ccc; border-radius: 5px;" />
    <button type="submit" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer; margin-left: 10px;">
        Search
    </button>
</form>

<!-- Results Section -->
@if (Model != null && Model.Any())
{
    <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 20px;">
        @foreach (var video in Model)
        {
            <div style="width: 300px; padding: 20px; border: 1px solid #ccc; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); display: flex; flex-direction: column; justify-content: space-between; text-align: center;">
                <!-- Set a fixed size for the image -->
                <img src="@video.ThumbnailUrl" alt="@video.Title"
                     style="width: 100%; height: 180px; object-fit: cover; border-radius: 5px; margin-bottom: 15px;" />
                <div style="flex-grow: 1;">
                    <h3 style="font-size: 18px; color: #333;">@video.Title</h3>
                    <p style="font-size: 14px; color: #666; margin-bottom: 15px;">@video.Description</p>
                </div>
                <a href="@video.VideoUrl" target="_blank">
                    <button type="button" style="padding: 10px 80px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer; margin-top: 10px;">
                        Watch
                    </button>
                </a>
            </div>
        }
    </div>
    <br />
    <br />
}
